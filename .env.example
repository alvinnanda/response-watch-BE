# ResponseWatch Backend Environment Configuration

# Server
PORT=3000
ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/response_watch?sslmode=disable

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-super-secret-session-key-change-in-production
APP_SECRET=your-32-byte-aes-encryption-key!

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Session
SESSION_EXPIRY_HOURS=168

# Email (SMTP)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-brevo-username
SMTP_PASSWORD=your-brevo-smtp-key
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_FROM_NAME=ResponseWatch

# WhatsApp API (Go WhatsApp by Aldino Kemal)
WHATSAPP_API_URL=https://your-whatsapp-instance.sumopod.com
WHATSAPP_DEVICE_ID=your-device-id
WHATSAPP_API_USER=
WHATSAPP_API_PASSWORD=
